@model List<PortFolio>


<main>
    <section id="head">
        <div class="container d-flex align-items-center flex-column">
            <img class="masthead_avatar" width="250px" height="250px" src="assets/img/avataaars.svg" alt="..." />
            <h1 class="">Start Bootstrap</h1>

            <div class="divider">
                <div class="divider_line"></div>
                <div class="divider_icon"><i class="fas fa-star"></i></div>
                <div class="divider_line"></div>
            </div>

            <p class="">Graphic Artist - Web Designer - Illustrator</p>
        </div>
    </section>
    <section id="portfolio">
        <div class="container">
            <div class="sectitle">
                <h2 class="">
                    PORTFOLIO
                </h2>
                <div class="divider ">
                    <div class="divider_line"></div>
                    <div class="divider_icon"><i class="fas fa-star"></i></div>
                    <div class="divider_line"></div>
                </div>
            </div>
            <div class="row justify-content-center">

            @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal1">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white">
                                    <i class="fas fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="~/Uploads/@item.PortImage" alt="..." />
                        </div>
                    </div>
                }


            </div>

            @foreach (var item in Model)
            {
                <div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" aria-labelledby="portfolioModal1" aria-hidden="true">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                            <div class="modal-body text-center pb-5">
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <!-- Portfolio Modal - Title-->
                                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@item.PortTittle</h2>
                                            <!-- Icon Divider-->
                                            <div class="divider-custom">
                                                <div class="divider-custom-line"></div>
                                                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                                <div class="divider-custom-line"></div>
                                            </div>
                                            <!-- Portfolio Modal - Image-->
                                            <img class="img-fluid rounded mb-5" src="assets/img/portfolio/@item.PortImage" alt="..." />
                                            <!-- Portfolio Modal - Text-->
                                            <p class="mb-4">@item.PortContent</p>
                                            <button class="btn btn-primary" href="#!" data-bs-dismiss="modal">
                                                <i class="fas fa-times fa-fw"></i>
                                                Close Window
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </section>


    <section id="about">
        <div class="container">

            <div class="sectitle">
                <h2 class="">ABOUT</h2>

                <div class="divider ">
                    <div class="divider_line"></div>
                    <div class="divider_icon"><i class="fas fa-star"></i></div>
                    <div class="divider_line"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 ms-auto"><p class="lead">Freelancer is a free bootstrap theme created by Start Bootstrap. The download includes the complete source files including HTML, CSS, and JavaScript as well as optional SASS stylesheets for easy customization.</p></div>
                <div class="col-lg-4 me-auto"><p class="lead">You can create your own custom avatar for the masthead, change the icon in the dividers, and add your email address to the contact form to make it fully functional!</p></div>
            </div>
            <div class="text-center mt-4">
                <a class="btn btn-xl btn-outline-light" href="#">
                    <i class="fas fa-download me-2"></i>
                    Free Download!
                </a>
            </div>
        </div>
        </div>
    </section>


    <section id="contact">
        <div class="container">

            <div class="sectitle">
                <h2 class="">CONTACT ME</h2>

                <div class="divider ">
                    <div class="divider_line"></div>
                    <div class="divider_icon"><i class="fas fa-star"></i></div>
                    <div class="divider_line"></div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <form id="contactForm">
                        <div class="form-floating mb-3">
                            <input class="form-control" id="name" type="text" placeholder="">
                            <label for="name">Full name</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="email" type="email" placeholder="">
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" id="phone" type="tel" placeholder="">
                            <label for="phone">Phone number</label>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="message" type="text" placeholder="" style="height: 10rem" data-sb-validations="required"></textarea>
                            <label for="message">Message</label>
                        </div>
                        <button class="btn  btn-xl " id="submitButton" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>