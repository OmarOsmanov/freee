@model PortFolio
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="Portfolio" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <img src="~/Uploads/@Model.PortImage" alt="Alternate Text" width="100" />
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.PortTittle" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.PortTittle">
                    <span asp-validation-for="@Model.PortTittle" class="text-danger"></span>
                </div>

               

                <div class="mb-3">
                    <label asp-for="@Model.PortContent" class="form-label">Content</label>
                    <textarea class="form-control" asp-for="@Model.PortContent"></textarea>
                    <span asp-validation-for="@Model.PortContent" class="text-danger"></span>
                </div>
                <input asp-for="@Model.PortfolioId" hidden />
                <input asp-for="@Model.PortImage" hidden />
                <input asp-for="@Model.UserId" hidden />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
